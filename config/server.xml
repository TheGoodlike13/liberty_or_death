<server>
    <featureManager>
        <feature>appSecurity-4.0</feature>
        <feature>servlet-5.0</feature>
        <feature>ldapRegistry-3.0</feature>
        <feature>spnego-1.0</feature>
    </featureManager>

    <logging traceSpecification="*=fine"/>

    <ldapRegistry id="LDAP" realm="GOODLIKE.EU"
                  host="mumkashi.goodlike.eu" port="3268"
                  baseDN="DC=goodlike,DC=eu"
                  bindDN="CN=Administrator,CN=Users,DC=goodlike,DC=eu"
                  bindPassword="Passw0rd"
                  ldapType="Microsoft Active Directory"
                  recursiveSearch="true">
        <activedFilters userFilter="&amp;(cn=%v)(objectClass=person)"
                        groupFilter="&amp;(cn=%v)(objectClass=group)"
                        userIdMap="*:cn"
                        groupIdMap="*:cn"
                        groupMemberIdMap="group:member"/>
    </ldapRegistry>

    <kerberos configFile="krb.conf" keytab="working.keytab"/>

    <spnego id="whocares"
            servicePrincipalNames="HTTP/gpc.goodlike.eu@GOODLIKE.EU"/>

    <webAppSecurity ssoDomainNames="localhost"/>

    <application location="${whereMyWarAt}" context-root="/">
        <application-bnd>
            <security-role name="TheWorld">
                <special-subject type="ALL_AUTHENTICATED_USERS"/>
            </security-role>
        </application-bnd>
    </application>
</server>
